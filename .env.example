# Superlinked RAG Configuration
# Copy this file to .env and customize as needed

# ==================== Directory Configuration ====================
# Working directory for generated app files
# SUPERLINKED_WORK_DIR=/path/to/your/work/directory

# ==================== Vector Database Configuration ====================
# Vector database provider (options: qdrant, pinecone, weaviate)
VECTOR_DB_PROVIDER=qdrant

# Vector database connection URL
VECTOR_DB_URL=http://localhost:6333

# Vector database API key (if required)
VECTOR_DB_API_KEY=

# Default collection/index name
VECTOR_DB_DEFAULT_COLLECTION=default

# ==================== Embedding Model Configuration ====================
# Embedding model for text similarity
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Text chunking configuration
CHUNK_SIZE=100
CHUNK_OVERLAP=20

# ==================== Space Configuration ====================
# Recency space settings
RECENCY_PERIOD_DAYS=300
RECENCY_NEGATIVE_FILTER=-0.25

# Number space settings
NUMBER_MIN_VALUE=0.0
NUMBER_MAX_VALUE=1.0

# ==================== Server Configuration ====================
# Base port for Superlinked REST server
SUPERLINKED_BASE_PORT=8080

# Server startup timeout (seconds)
SERVER_STARTUP_TIMEOUT=30

# Data loading wait time (seconds)
DATA_LOADING_WAIT_TIME=15

# ==================== Default Weights Configuration ====================
# Default weights for different space types
DEFAULT_TEXT_WEIGHT=1.0
DEFAULT_RECENCY_WEIGHT=0.5
DEFAULT_NUMBER_WEIGHT=0.5

# ==================== Logging Configuration ====================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
